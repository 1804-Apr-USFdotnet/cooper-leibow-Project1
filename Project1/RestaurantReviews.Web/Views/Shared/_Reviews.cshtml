@model RestaurantLibrary.Models.Review


<div>
    <h4 class="display-4">The restaurant's reviews</h4>
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Rating</th>
                <th scope="col">Content</th>
                <th scope="col">Reviewer</th>

                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @{ foreach (RestaurantLibrary.Models.Review rev in ViewData["restaurant_reviews"] as List<RestaurantLibrary.Models.Review>)
            {


                <tr>
                    <th scope="row">@rev.Rating </th>
                    <td>@rev.Content</td>
                    <td>@rev.reviewer.name</td>
              
                    <td>
                        <button type="button" onclick="location.href='@Url.Action("Edit", "Review", new { id = @rev.id })'" class="btn btn-primary">Edit</button>
                        <button type="button" onclick="location.href='@Url.Action("DeleteConfirmation", "Review", new { id = @rev.id })'" class="btn btn-danger">Delete</button>

                    </td>
                </tr>
        }
            }


        </tbody>
    </table>
</div>

